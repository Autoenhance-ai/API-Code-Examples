<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add Property - Autoenhance Example</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      padding: 20px;
    }
    .container {
      max-width: 800px;
    }
    .uploader-container {
      margin: 20px 0;
      padding: 20px;
      border: 1px dashed #ccc;
      border-radius: 5px;
      text-align: center;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1 class="mb-4">Add New Property</h1>
    
    <div class="card">
      <div class="card-body">
        <form action="/create" method="POST" id="property-form">
          <div class="mb-3">
            <label for="propertyName" class="form-label">Property Name</label>
            <input type="text" class="form-control" id="propertyName" name="propertyName" required>
          </div>
          
          <div class="mb-3">
            <label for="propertyAddress" class="form-label">Property Address</label>
            <input type="text" class="form-control" id="propertyAddress" name="propertyAddress" required>
          </div>
          
          <div class="mb-3">
            <label class="form-label">Property Images</label>
            <div class="uploader-container">
              <!-- Autoenhance Web SDK Uploader Component -->
              <image-uploader preferences='{"ai_version": "4.0"}'></image-uploader>
            </div>
            <input type="hidden" id="orderId" name="orderId" required>
            <div id="upload-status" class="form-text"></div>
          </div>
          
          <div class="d-flex justify-content-between">
            <a href="/" class="btn btn-secondary">Cancel</a>
            <button type="submit" class="btn btn-primary" id="submit-btn" disabled>Add Property</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Autoenhance Web SDK -->
  <script src="https://unpkg.com/@autoenhance.ai/web" api-key="<%= apiKey %>"></script>
  
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const orderIdInput = document.getElementById('orderId');
      const uploadStatus = document.getElementById('upload-status');
      const submitBtn = document.getElementById('submit-btn');
      const imageUploader = document.querySelector('image-uploader');
      
      // Listen for events from the image uploader
      imageUploader.addEventListener("files-added", (e) => {
        console.log("files-added");
        uploadStatus.textContent = "Files added, ready to upload";
      });
      
      imageUploader.addEventListener("complete", (e) => {
        console.log("complete");
        console.log(e.detail.orderId);
        
        // Store the order ID in the hidden input
        orderIdInput.value = e.detail.orderId;
        uploadStatus.textContent = `Order created: ${e.detail.orderId}`;
        uploadStatus.classList.add('text-success');
        submitBtn.disabled = false;
      });
      
      imageUploader.addEventListener("error", (e) => {
        console.log("error");
        uploadStatus.textContent = `Error: ${e.detail.message || 'Unknown error'}`;
        uploadStatus.classList.add('text-danger');
      });
      
      // Form submission
      document.getElementById('property-form').addEventListener('submit', function(e) {
        if (!orderIdInput.value) {
          e.preventDefault();
          alert('Please upload at least one image before submitting.');
        }
      });
    });
  </script>
</body>
</html> 